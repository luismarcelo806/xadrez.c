#include <stdio.h>

int main() {
    // ==============================
    // Simulação de movimentos de Xadrez
    // Peças: Torre, Bispo e Rainha
    // Estruturas usadas: for, while, do-while
    // ==============================

    // ---------- TORRE ----------
    // A Torre se move em linha reta (horizontal ou vertical).
    // Vamos simular o movimento da Torre 5 casas para a direita.
    int i;
    int casas_torre = 5;

    printf("Movimento da TORRE:\n");
    for (i = 1; i <= casas_torre; i++) {
        printf("Direita\n");
    }

    // ---------- BISPO ----------
    // O Bispo se move na diagonal.
    // Vamos simular o movimento 5 casas na diagonal superior direita.
    int contador_bispo = 1;
    int casas_bispo = 5;

    printf("\nMovimento do BISPO:\n");
    while (contador_bispo <= casas_bispo) {
        printf("Cima, Direita\n");
        contador_bispo++;
    }

    // ---------- RAINHA ----------
    // A Rainha pode se mover em qualquer direção.
    // Vamos simular o movimento de 8 casas para a esquerda.
    int contador_rainha = 1;
    int casas_rainha = 8;

    printf("\nMovimento da RAINHA:\n");
    do {
        printf("Esquerda\n");
        contador_rainha++;
    } while (contador_rainha <= casas_rainha);

    // Fim do programa
    return 0;
}
